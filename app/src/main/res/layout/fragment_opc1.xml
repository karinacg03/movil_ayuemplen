<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="26dp"
        android:text="CUENTA"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/imfoperfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Información de perfil"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/optionNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:drawableEnd="@android:drawable/ic_menu_more"
            android:padding="12dp"
            android:text="Nombre" />

        <TextView
            android:id="@+id/optionUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:drawableEnd="@android:drawable/ic_menu_more"
            android:padding="12dp"
            android:text="Ubicación" />

        <TextView
            android:id="@+id/optionInfoDetallada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:drawableEnd="@android:drawable/ic_menu_more"
            android:padding="12dp"
            android:text="Información detallada" />
    </LinearLayout>

    <EditText
        android:id="@+id/visibilidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Visibilidad"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/Modooscu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:drawableEnd="@android:drawable/ic_menu_more"
            android:padding="12dp"
            android:text="Modo oscuro" />


        <TextView
            android:id="@+id/reprovide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:drawableEnd="@android:drawable/ic_menu_more"
            android:padding="12dp"
            android:text="Reproducir videos" />

        <TextView
            android:id="@+id/mostfotvid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:drawableEnd="@android:drawable/ic_menu_more"
            android:padding="12dp"
            android:text="Mostrar Fotos De Perfil" />
    </LinearLayout>

    <EditText
        android:id="@+id/gestioncuen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Gestion de cuenta"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/Cerrarsec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:drawableEnd="@android:drawable/ic_menu_more"
            android:padding="12dp"
            android:text="Cerrar Sesion" />


        <TextView
            android:id="@+id/elimicuen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:drawableEnd="@android:drawable/ic_menu_more"
            android:padding="12dp"
            android:text="Eliminar Cuenta" />

    </LinearLayout>

</LinearLayout>